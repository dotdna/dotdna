- model_class = FitmentCenter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:company_name)
      %th= model_class.human_attribute_name(:contact_name)
      %th= model_class.human_attribute_name(:contact_email_address)
      %th= model_class.human_attribute_name(:contact_cell_number)
      %th= model_class.human_attribute_name(:postal_address)
      %th= model_class.human_attribute_name(:verified)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @fitment_centers.each do |fitment_center|
      %tr
        %td= link_to fitment_center.id, fitment_center_path(fitment_center)
        %td= fitment_center.company_name
        %td= fitment_center.contact_name
        %td= fitment_center.contact_email_address
        %td= fitment_center.contact_cell_number
        %td= fitment_center.postal_address
        %td=l fitment_center.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_fitment_center_path(fitment_center), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), fitment_center_path(fitment_center), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_fitment_center_path, :class => 'btn btn-primary'
