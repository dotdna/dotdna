= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f|
  = f.input :fitment_center_id, :as => :hidden
  = f.input :total, :as => :hidden
  = f.input :dispatched, :as => :hidden
  = f.input :ref_number, :as => :hidden
  = f.fields_for :order_lines do |builder|
    = render 'order_line_fields', f: builder
  = link_to_add_fields "Add Order Line", f, :order_lines
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn'
