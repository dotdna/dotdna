- model_class = FitmentCenterStock
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:fitment_center_id) + ':'
  %br
  = @fitment_center_stock.fitment_center_id
%p
  %strong= model_class.human_attribute_name(:product_id) + ':'
  %br
  = @fitment_center_stock.product_id
%p
  %strong= model_class.human_attribute_name(:qty) + ':'
  %br
  = @fitment_center_stock.qty

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), fitment_center_stocks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_fitment_center_stock_path(@fitment_center_stock), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), fitment_center_stock_path(@fitment_center_stock), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
