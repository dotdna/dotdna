- model_class = FitmentCenterStock
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:fitment_center_id)
      %th= model_class.human_attribute_name(:product_id)
      %th= model_class.human_attribute_name(:qty)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @fitment_center_stocks.each do |fitment_center_stock|
      %tr
        %td= link_to fitment_center_stock.id, fitment_center_stock_path(fitment_center_stock)
        %td= fitment_center_stock.fitment_center_id
        %td= fitment_center_stock.product_id
        %td= fitment_center_stock.qty
        %td=l fitment_center_stock.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_fitment_center_stock_path(fitment_center_stock), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), fitment_center_stock_path(fitment_center_stock), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_fitment_center_stock_path, :class => 'btn btn-primary'
