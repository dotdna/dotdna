= simple_form_for @customer, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :first_name
  = f.input :middle_name
  = f.input :last_name
  = f.input :cell_number
  = f.input :physical_address
  = f.input :email
  = f.input :idnumber
  %hr

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), customers_path, :class => 'btn'
