%br
.row
  %center
    %img{:src => "#{asset_path("logo.png")}", :style => "width: 200px;"}

.row
  %h4.text-success My Details
  %table.table.table-bordered.table-stripped
    %tr
      %td
        Customer Name
      %td
        =@customer.first_name
    %tr
      %td
        Customer Number
      %td
        =@customer.customer_id
    %tr
      %td
        Guarantee Number
      %td
        =@customer.guarantee_number
    %tr
      %td
        ID Number
      %td
        =@customer.idnumber
  %h4.text-success My Assets
  %table.table.table-bordered.table-stripped
    -@customer.customer_asset.each do |x|
      %tr
        %td
          Make
        %td
          =x.make
      %tr
        %td
          VIN Number
        %td
          =x.vinnumber
      %tr
        %td
          Microdot Number
        %td
          =x.microdot_number
      %tr
        %td
          Vehicle Registration
        %td
          =x.registration_number
      %tr
        %td
          Registration Date
        %td
          =x.created_at
.row
  %hr
  %center
    %a.btn.btn-primary.btn-block.btn-large{:href => "#"} Edit
  %br

.row
  %center
    %img{:src => "#{asset_path("veridot.png")}", :style => "width: 80px;"}