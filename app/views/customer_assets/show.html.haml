- model_class = CustomerAsset
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:customer_id) + ':'
  %br
  = @customer_asset.customer_id
%p
  %strong= model_class.human_attribute_name(:make) + ':'
  %br
  = @customer_asset.make
%p
  %strong= model_class.human_attribute_name(:model) + ':'
  %br
  = @customer_asset.model
%p
  %strong= model_class.human_attribute_name(:vinnumber) + ':'
  %br
  = @customer_asset.vinnumber
%p
  %strong= model_class.human_attribute_name(:color) + ':'
  %br
  = @customer_asset.color
%p
  %strong= model_class.human_attribute_name(:microdot_number) + ':'
  %br
  = @customer_asset.microdot_number
%p
  %strong= model_class.human_attribute_name(:registration_number) + ':'
  %br
  = @customer_asset.registration_number
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @customer_asset.type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), customer_assets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_asset_path(@customer_asset), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_asset_path(@customer_asset), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
