- model_class = CustomerAsset
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:customer_id)
      %th= model_class.human_attribute_name(:make)
      %th= model_class.human_attribute_name(:model)
      %th= model_class.human_attribute_name(:vinnumber)
      %th= model_class.human_attribute_name(:color)
      %th= model_class.human_attribute_name(:microdot_number)
      %th= model_class.human_attribute_name(:registration_number)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @customer_assets.each do |customer_asset|
      %tr
        %td= link_to customer_asset.id, customer_asset_path(customer_asset)
        %td= customer_asset.customer_id
        %td= customer_asset.make
        %td= customer_asset.model
        %td= customer_asset.vinnumber
        %td= customer_asset.color
        %td= customer_asset.microdot_number
        %td= customer_asset.registration_number
        %td= customer_asset.type
        %td=l customer_asset.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_asset_path(customer_asset), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_asset_path(customer_asset), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_customer_asset_path, :class => 'btn btn-primary'
