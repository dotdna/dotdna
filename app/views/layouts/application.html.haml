!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "DotDna Portal"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#{root_url}") DotDna Portal
          .container.nav-collapse
            -if admin_user_signed_in?
              -if current_admin_user.email != "joe@dotdna.co.za"
                %ul.nav
                  %li= link_to "Fitment Centers", "/fitment_centers"
                  %li= link_to "Customers", "/customers"
                  %li= link_to "Products", "/products"
                  %li= link_to "Orders", "/orders"
                  %li= link_to "Fitment Center Stock", "/fitmentcenter_stock"
                  %li= link_to "Fitment Center Users", "/fitment_center_users"
                  %li= link_to "Insurnace Brokers", "/insurance_brokers"
              %ul.nav
                %li= link_to "Sign Out", destroy_admin_user_session_path, :method => :delete

    .container-fluid
      .row-fluid
        .span9
          = bootstrap_flash
          = yield
    
      %footer
        %p
          &copy;
          %a{:href => "http://www.dotdna.co.za"} DotDna.
