- model_class = InsuranceBroker
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @insurance_broker.name
%p
  %strong= model_class.human_attribute_name(:physical_address) + ':'
  %br
  = @insurance_broker.physical_address
%p
  %strong= model_class.human_attribute_name(:tel_number) + ':'
  %br
  = @insurance_broker.tel_number
%p
  %strong= model_class.human_attribute_name(:fax_number) + ':'
  %br
  = @insurance_broker.fax_number
%p
  %strong= model_class.human_attribute_name(:contact_name) + ':'
  %br
  = @insurance_broker.contact_name
%p
  %strong= model_class.human_attribute_name(:contact_email) + ':'
  %br
  = @insurance_broker.contact_email
%p
  %strong= model_class.human_attribute_name(:contact_mobile) + ':'
  %br
  = @insurance_broker.contact_mobile
%p
  %strong= model_class.human_attribute_name(:country_name) + ':'
  %br
  = @insurance_broker.country_name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), insurance_brokers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_insurance_broker_path(@insurance_broker), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), insurance_broker_path(@insurance_broker), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
